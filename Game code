rock = '''
    _______
---'   ____)
      (_____)
      (_____)
      (____)
---.__(___)
'''

paper = '''
    _______
---'   ____)____
          ______)
          _______)
         _______)
---.__________)
'''

scissors = '''
    _______
---'   ____)____
          ______)
       __________)
      (____)
---.__(___)
'''

#Write your code below this line ðŸ‘‡
choice= input("What do you choose? Type 0 for Rock, 1 for Paper or 2 for Scissors.\n")
if choice == "0":
  print(rock)
elif choice == "1":
  print(paper)
elif choice == "2":
  print(scissors)

import random
print("Computer Chose: ")
computer = str(random.randint(0,2))
if computer == "0":
  print(rock)
elif computer == "1":
  print(paper)
elif computer == "2":
  print(scissors)

if choice == "0" and computer == "2" or choice == "1" and computer == "0" or choice == "2" and computer == "1":
  print("You win!")
elif choice == "2" and computer == "0" or choice == "0" and computer == "1" or choice == "1" and computer == "2":
  print("You Lose!")  

else:
  print("It was a tie!")
